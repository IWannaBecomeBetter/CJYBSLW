<div class="searchArea">

    <div class="form-group formdiv">
        <label>搜索条件</label>
        <input type="text" class="form-control" name="telephone" placeholder="手机"/>
    </div>

    <div class="form-group formdiv">
        <label>处理状态</label>
        <select name="status" class="form-control">
            <option value="">全部</option>
            <option value="1">新增</option>
            <option value="2">已处理</option>
        </select>
    </div>

    <div class="form-group formdiv">
        <input type="text" class="form-control datepicker-autoclose" name="startTime" placeholder="请选择开始时间">
        <input type="text" class="form-control datepicker-autoclose" name="endTime" placeholder="请选择结束时间">
    </div>
    <button class="btn btn-outline btn-info search" type="button">
        <i class="iconfont icon-sousuo"></i>查询
    </button>
    <button class="btn btn-outline btn-success reset" type="button">
        <i class="iconfont icon-shuaxin"></i>重置
    </button>
</div>